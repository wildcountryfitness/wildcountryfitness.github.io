:plain
  ---
  layout: default
  title: Contact Us
  ---

%h1 {{ page.title }}

%form#contact_us{ action: 'https://formspree.io/{{site.email}}', method: 'POST' }
  %input{ type: 'text', name: '_gotcha', style: 'display:none' }

  %input{ type: 'hidden', name: '_subject', value: '{{site.title}} enquiry' }

  :ruby
    next_value = "{{ '/contact_us/thanks.html' | " \
                 '| prepend: site.baseurl | prepend: site.url }}'

  %input{ type: 'hidden', name: '_next', value: next_value }

  %fieldset.form-group
    %label{ for: 'name' } Name
    %input.form-control{ name: 'name', type: 'text', required: '',
      autocorrect: 'off', spellcheck: 'off',
      placeholder: 'Please tell us your name', tabindex: 1 }

  %fieldset.form-group
    %label{ for: 'email' } Email address
    %input.form-control{ name: 'email', type: 'email', required: '',
      autocapitalize: 'off', autocorrect: 'off', spellcheck:  'off',
      placeholder: 'What is your email address?', tabindex: 2 }

  %fieldset.form-group
    %label{ for: 'message' } Message
    %textarea.form-control{ name: 'body', rows: 5, required: '', tabindex: 4,
      placeholder: 'Please tell us what you are enquiring about...' }

  %input.btn.btn-lg.btn-secondary{ type: 'submit', value: 'Send', tabindex: 5 }
